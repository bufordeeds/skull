{
	"root": true,
	"env": {
		"es2021": true,
		"browser": false,
		"node": false,
		"deno": true
	},
	"extends": ["eslint:recommended"],
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"rules": {
		"no-unused-vars": "warn",
		"no-undef": "off", // Deno handles this with its own type checking
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"]
	},
	"ignorePatterns": ["node_modules/", "dist/", "build/"]
}
