{
  "name": "skull",
  "version": "1.0.0",
  "description": "Skull Digital is a digital adaptation of the classic bluffing game Skull, designed for mobile devices.",
  "private": true,
  "workspaces": [
    "client"
  ],
  "scripts": {
    "check": "deno fmt && deno lint",
    "client": "deno task --cwd=client dev",
    "commit": "git-cz",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "server": "deno task --cwd=server dev",
    "test": "deno task --cwd=server test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bufordeeds/skull.git"
  },
  "keywords": [
    "game",
    "multiplayer",
    "react-native",
    "deno",
    "socket.io"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bufordeeds/skull/issues"
  },
  "homepage": "https://github.com/bufordeeds/skull#readme",
  "devDependencies": {
    "@digitalroute/cz-conventional-changelog-for-jira": "^8.0.1",
    "commitizen": "^4.3.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@digitalroute/cz-conventional-changelog-for-jira"
    }
  }
}
